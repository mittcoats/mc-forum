#post_content
	%h1= @post.title
	%p= @post.content

	#comments
		%h2= @post.comments.count
		= render @post.comments

		%h3 Reply to thread
		= render "comments/form"
	
	%br/
	%hr/
	%br/

	= link_to "Edit", edit_post_path(@post), class: "link"
	= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "You sure?" }, class: "link"
	= link_to "Home", root_path, class: "link"